{
  "battery": {
    "format": "{icon}  {capacity}%",
    "format-alt": "{time}  {icon}",
    "format-charging": "  {capacity}%",
    "format-full": "{icon}  {capacity}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ],
    "format-plugged": "  {capacity}%",
    "states": {
      "critical": 15,
      "warning": 30
    }
  },
  "battery#bat2": {
    "bat": "BAT2"
  },
  "bluetooth": {
    "format": "󰂯 {status} ",
    "format-connected": "󰂱 {status} ",
    "on-click": "io.github.ebonjaeger.bluejay",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
  },
  "clock": {
    "format": "{:%I:%M %p | %e %B} ",
    "format-alt": "{:%Y-%m-%d}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  "custom/arch": {
    "format": "󰣇",
    "tooltip": true,
    "tooltip-format": "btw"
  },
  "custom/cpuhistory": {
    "exec": "~/.config/waybar/scripts/cpu_history.py -d 60",
    "format": "  {}",
    "interval": 1,
    "on-click": "~/.config/waybar/scripts/cpu_history.py toggle",
    "return-type": "json"
  },
  "custom/updates": {
    "exec": "~/.config/waybar/scripts/checkupdates.sh",
    "format": "{icon}  {text} ",
    "format-icons": {
      "up-to-date": "",
      "updates-pending": ""
    },
    "interval": 1800,
    "on-click": "pkill -RTMIN+8 waybar",
    "return-type": "json",
    "signal": 8,
    "tooltip": true
  },
  "hyprland/workspaces": {
    "all-outputs": true,
    "disable-scroll": true,
    "format": "{name}",
    "format-icons": {
      "active": "",
      "default": "",
      "urgent": ""
    },
    "persistent-workspaces": {
      "*":[1,2,3,4]
    },
    "warp-on-scroll": false
  },
  "idle_inhibitor": {
    "format": "{icon} ",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },
  "memory": {
    "format": "  {}%",
    "tooltip": true
  },
  "mpris": {
	  "format": "{status_icon} {artist}",
	  "format-paused": "{status_icon} {artist}",
	  "status-icons": {
		  "paused": "▶",
		  "playing": "⏸"
	  },
	  // "ignored-players": ["firefox"]
  },
  "network": {
    "format-disconnected": "󱛅",
    "format-ethernet": "{ipaddr}/{cidr} 󱚾",
    "format-linked": "{ifname} (No IP) 󱚾",
    "format-wifi": "󰖩",
    "on-click": "alacritty -e nmtui",
    "tooltip-format": "{essid}\n{ifname} via {gwaddr} "
  },
  "pulseaudio": {
    "format": "{icon}   {volume}%",
    "format-bluetooth": "{icon}   {volume}% ",
    "format-bluetooth-muted": " {icon}",
    "format-icons": {
      "car": "",
      "default": [
        "",
        "",
        ""
      ],
      "hands-free": "",
      "headphone": "",
      "headset": "",
      "phone": "",
      "portable": ""
    },
    "format-muted": " ",
    "format-source": " {volume}%",
    "format-source-muted": "",
    "on-click": "pactl -- set-sink-mute 0 toggle",
    "on-click-right": "com.saivert.pwvucontrol"
  },
  "temperature": {
    "critical-threshold": 100,
    "format": " {temperatureC}°C",
    "format-critical": " {temperatureC}",
    "hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input",
    "interval": 10
  }
}
